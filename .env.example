# Database
DATABASE_URL="postgresql://user:password@localhost:5432/npcf_subs?schema=public"

# Dropbox Sign (HelloSign) API
DROPBOX_SIGN_API_KEY="your_api_key_here"
DROPBOX_SIGN_TEST_MODE="true"

# Vercel Blob Storage (para upload de documentos)
BLOB_READ_WRITE_TOKEN="your_vercel_blob_token_here"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cognito Hosted UI (Auth)
# Hosted UI domain (no trailing slash)
# Example: https://your-domain.auth.us-east-1.amazoncognito.com
NEXT_PUBLIC_COGNITO_DOMAIN=
# Cognito App Client ID
NEXT_PUBLIC_COGNITO_CLIENT_ID=
# Scopes to request
NEXT_PUBLIC_COGNITO_SCOPE=openid email phone
# Exact callback URL registered in Cognito App Client settings
# For local dev on port 3000:
# NEXT_PUBLIC_COGNITO_REDIRECT_URI=http://localhost:3000/callback
# If dev runs on 3001 (when 3000 busy), either add http://localhost:3001/callback to Cognito or free port 3000
NEXT_PUBLIC_COGNITO_REDIRECT_URI=
# Optional: OIDC issuer/authority (user pool). Example:
# https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX
NEXT_PUBLIC_COGNITO_AUTHORITY=

# Email (opcional - para notificações)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_password"
